[
  {
    "key": "connection.baseUrl",
    "type": "input",
    "defaultValue": "https://customer-test.topdesk.net",
    "templateOptions": {
      "label": "url",
      "placeholder": "Please enter the url to the TOPdesk api",
      "required": true
    }
  },
  {
    "key": "connection.username",
    "type": "input",
    "defaultValue": "",
    "templateOptions": {
      "label": "Username",
      "placeholder": "Please enter the username",
      "required": true
    }
  },
  {
    "key": "connection.apikey",
    "type": "input",
    "defaultValue": "",
    "templateOptions": {
      "label": "Application password",
      "type": "password",
      "placeholder": "Please enter the aplication password",
      "required": true
    }
  },
  {
    "key": "notifications.jsonPath",
    "type": "input",
    "defaultValue": "",
    "templateOptions": {
      "label": "Notification file path",
      "placeholder": "Please enter path to the TOPdesk notifcation file",
      "required": false
    }
  },
  {
    "key": "isDebug",
    "type": "checkbox",
    "defaultValue": true,
    "templateOptions": {
      "label": "Toggle debug logging",
      "description": "When toggled, debug logging will be displayed",
      "required": false
    }
  },
  {
    "key": "notifications.disable",
    "type": "checkbox",
    "defaultValue": false,
    "templateOptions": {
      "label": "Do not create topdesk changes or incidents",
      "required": false
    }
  },
  {
    "key": "lookup.errorDepartment",
    "type": "radio",
    "defaultValue": "true",
    "templateOptions": {
      "label": "When a department is empty or does not exist in TOPdesk",
      "options": [
        {
          "value": "false",
          "label": "Leave empty or clear the department field"
        },
        {
          "value": "true",
          "label": "Stop processing"
        }
      ]
    }
  },
  {
    "key": "lookup.errorBudgetHolder",
    "type": "radio",
    "defaultValue": "true",
    "templateOptions": {
      "label": "When a budgetholder is empty or does not exist in TOPdesk",
      "options": [
        {
          "value": "false",
          "label": "Leave empty or clear the budgetholder field"
        },
        {
          "value": "true",
          "label": "Stop processing"
        }
      ]
    }
  },
  {
    "key": "lookup.errorNoManager",
    "type": "radio",
    "defaultValue": "true",
    "templateOptions": {
      "label": "When a manager reference is emtpy",
      "options": [
        {
          "value": "false",
          "label": "Leave empty or clear the manager field"
        },
        {
          "value": "true",
          "label": "Stop processing"
        }
      ]
    }
  }
]